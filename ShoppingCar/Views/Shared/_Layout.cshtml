<body>
    <div id="example" class="fixed-header">
        <div id="megaStore">
            <ul id="menu">
                <li>
                    <a href="@Url.Action("index","Home")">
                        <i class="fa fa-home fa-lg"></i>
                    </a>
                </li>
                <li>
                    Products
                    <ul>
                        <li>
                            @Html.ActionLink(ShoppingCar.App_GlobalResources.LayoutMemberResource.Product_List, "Index", "Home")
                        </li>
                        <li>
                            @Html.ActionLink(ShoppingCar.App_GlobalResources.LayoutMemberResource.register, "Register", "Member")
                        </li>
                        <li>
                            @Html.ActionLink(ShoppingCar.App_GlobalResources.LayoutMemberResource.Login, "Login", "Member")
                        </li>
                    </ul>
                </li>

                <li>
                    Blog
                </li>
                <li class="pull-right border-line">
                    <i class="fa fa-globe fa-lg">@*ShoppingCar.App_GlobalResources.LayoutMemberResource.Language*@</i>
                    <ul>
                        <li>@Html.ActionLink("English", "SetCulture", "Home", new { culture = "en-US", returnUrl = this.Request.RawUrl }, null)</li>
                        <li>@Html.ActionLink("繁體中文", "SetCulture", "Home", new { culture = "zh-TW", returnUrl = this.Request.RawUrl }, null)</li>
                        <li>@Html.ActionLink("简体中文", "SetCulture", "Home", new { culture = "zh-CN", returnUrl = this.Request.RawUrl }, null)</li>
                    </ul>
                </li>
                <li class="pull-right border-line">
                    <i class="fa fa-user-circle fa-lg"></i>
                    <ul>
                        <li>
                            @Html.ActionLink(ShoppingCar.App_GlobalResources.LayoutMemberResource.register, "Register", "Member")
                        </li>
                        <li>
                            @Html.ActionLink(ShoppingCar.App_GlobalResources.LayoutMemberResource.Login, "Login", "Member")
                        </li>
                    </ul>
                </li>

                <li class="pull-right border-line">
                    <i class="fa fa-shopping-cart fa-lg"></i>
                </li>


            </ul>
        </div>

        <style>
            .fixed-header {
                top: 0;
                position: fixed;
                width: 100%;
                z-index: 1;
            }

            #menu > .k-last {
                float: right;
                border-left-width: 1px;
                border-right-width: 0;
            }
            .border-line {
                border-left-width: 1px;
                border-right-width: 0;
            }
        </style>
    </div>
