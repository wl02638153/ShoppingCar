@model IEnumerable<ShoppingCar.Models.OrderDetail>

@{
    ViewBag.Title = "購物車";
}
<head>
    <script src="@Url.Content("~/Scripts/jquery-3.3.1.min.js")" type="text/javascript"></script>
</head>
<script type="text/javascript">
